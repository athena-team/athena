    "inference_config":{
      "model_avg_num":1
    },
  
    "dataset_builder":"speaker_recognition_dataset",
    "num_data_threads":1,
    "trainset_config":{
        "data_csv":"examples/speaker_identification/didispeech/data/train.csv",
