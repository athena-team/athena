{
    "batch_size":128,
    "num_epochs":50,
    "sorta_epoch":0,
    "ckpt":"examples/speaker_identification/didispeech/ckpts/speaker_resnet/",
    "summary_dir":"examples/speaker_identification/didispeech/ckpts/speaker_resnet/event",
  
    "solver_gpu":[],
    "solver_type": "speaker_classification",
    "solver_config":{
      "clip_norm":100,
      "log_interval":10,
      "enable_tf_function":true
    },
  
    "model":"speaker_resnet",
    "num_classes":null,
    "pretrained_model":null,
    "model_config":{
      "num_speakers":6000,
      "hidden_size":128,
