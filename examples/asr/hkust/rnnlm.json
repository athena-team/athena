{
  "batch_size":32,
  "num_epochs":100,
  "sorta_epoch":0,
  "ckpt":"examples/asr/hkust/ckpts/rnnlm",

  "solver_gpu":[0],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
