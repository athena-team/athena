{
  "batch_size":64,
  "num_epochs":70,
  "sorta_epoch":1,
  "ckpt":"examples/asr/aishell/ckpts/rnnlm",

  "solver_gpu":[0],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
  },


  "model":"rnnlm",
  "num_classes": null,
  "pretrained_model": null,
  "model_config":{
    "d_model": 512,
    "rnn_type": "lstm",
    "num_layer": 2,
    "dropout_rate": 0.1,
    "sos": -1,
    "eos": -1
  },

  "optimizer":"warmup_adam",
  "optimizer_config":{
    "d_model":512,
    "warmup_steps":8000,
    "k":0.5,
    "decay_steps": 127600,
    "decay_rate": 0.1
  },

  "dataset_builder": "language_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv":"examples/asr/aishell/data/train.trans.csv",
    "input_text_config":{"type":"vocab", "model":"examples/asr/aishell/data/vocab"},
    "output_text_config":{"type":"vocab", "model":"examples/asr/aishell/data/vocab"}
  },
  "devset_config":{
    "data_csv":"examples/asr/aishell/data/dev.trans.csv",
    "input_text_config":{"type":"vocab", "model":"examples/asr/aishell/data/vocab"},
    "output_text_config":{"type":"vocab", "model":"examples/asr/aishell/data/vocab"}
  }
}