{
  "batch_size":8,
  "num_epochs":100,
  "sorta_epoch":1,
  "ckpt":"examples/asr/librispeech/ckpts/mtl_transformer",
  "summary_dir":"examples/asr/librispeech/ckpts/mtl_transformer",

  "solver_gpu":[1],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
  },

  "model":"mtl_transformer_ctc",
  "num_classes": null,
  "pretrained_model": null,
  "model_config":{
    "model":"speech_transformer",
    "model_config":{
      "return_encoder_output":true,
      "num_filters":512,
      "d_model":512,
      "num_heads":8,
      "num_encoder_layers":12,
      "num_decoder_layers":6,
      "dff":2048,
      "rate":0.1,
      "label_smoothing_rate":0.0,
      "schedual_sampling_rate":0.9
    },
    "mtl_weight":0.3
  },

  "decode_config":{
    "beam_search":true,
    "beam_size":10,
    "ctc_weight":0.5,
    "lm_type":"rnn",
    "lm_weight":0.7,
    "lm_path":"examples/asr/librispeech/configs/rnn.json"
  },

  "optimizer":"warmup_adam",
  "optimizer_config":{
    "d_model":512,
    "warmup_steps":25000,
    "k":1.0
  },


  "dataset_builder": "speech_recognition_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv": "examples/asr/librispeech/data/train.csv",
    "audio_config":{"type":"Fbank", "filterbank_channel_count":40},
    "cmvn_file":"examples/asr/librispeech/data/cmvn",
    "text_config": {"type":"spm", "model":"examples/asr/librispeech/data/librispeech_unigram5000.model"},
    "speed_permutation": [0.9, 1.0, 1.1],
    "input_length_range":[10, 20000]
  },
  "devset_config":{
    "data_csv": "examples/asr/librispeech/data/dev-clean.csv",
    "audio_config":{"type":"Fbank", "filterbank_channel_count":40},
    "cmvn_file":"examples/asr/librispeech/data/cmvn",
    "text_config": {"type":"spm", "model":"examples/asr/librispeech/data/librispeech_unigram5000.model"}
  },
  "testset_config":{
    "data_csv": "examples/asr/librispeech/data/test-clean.csv",
    "audio_config":{"type":"Fbank", "filterbank_channel_count":40},
    "cmvn_file":"examples/asr/librispeech/data/cmvn",
    "text_config": {"type":"spm", "model":"examples/asr/librispeech/data/librispeech_unigram5000.model"}
  }
}
