{
  "batch_size":16,
  "num_epochs":20,
  "sorta_epoch":1,
  "ckpt":"examples/translate/spa-eng-example/ckpts/transformer",

  "solver_gpu":[0],
  "solver_config":{
    "clip_norm":100,
    "log_interval":10,
    "enable_tf_function":true
  },


  "model":"translate_transformer",
  "model_config":{
    "d_model": 512,
    "num_heads": 8,
    "num_encoder_layers": 12,
    "num_decoder_layers": 6,
    "dff": 2048,
    "rate": 0.1,
    "label_smoothing_rate": 0.0
  },

  "optimizer":"warmup_adam",
  "optimizer_config":{
    "d_model":512,
    "warmup_steps":8000,
    "k":0.5
  },

  "dataset_builder": "language_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv":"examples/translate/spa-eng-example/data/train.csv",
    "input_text_config":{"type":"text"},
    "output_text_config":{"type":"text"}
  },
  "devset_config":{
    "data_csv":"examples/translate/spa-eng-example/data/train.csv",
    "input_text_config":{"type":"text"},
    "output_text_config":{"type":"text"}
  }
}
